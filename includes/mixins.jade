mixin team(members)
  each member in members
    figure.team-member
      img.marked-img(src='#{member.url}' width=100 height=100 alt='#{member.position}')
      if member.no == '1' 
        aside.member-social
          each socbtn in socbtns
            a.soc-btn(class='#{socbtn.type}'   href='#{socbtn.url}') #{socbtn.name} 
      span.title #{member.name}
      span.italic #{member.position} 
mixin quotes(autor)
  if block
    block
  else
  p.quote.
    "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation."
  span.autor #{autor}
mixin references(clients)
  each client in clients
    .client-item
      img(src='#{client.url}' width= height=   alt='#{client.name}')  
      .client-descr
        span.title #{client.name} 
        span.italic #{client.position}
        p.
          #{client.text} 
mixin blog(news)
  each n in news
    .blog-item
      img(src='#{n.url}' width= height=   alt='#{n.title}')
      .date
        span.day #{n.day}
        span.month #{n.month}
      span.title #{n.title}
      p.descr.
        #{n.descr}
      .stat 
        span.views #{n.views}
        span.comments #{n.comments}  
mixin follow(btns)
  .footer-btns
    each btn in btns 
      a(href='#{btn.url}') #{btn.name}
mixin blogs(records)
  .footer-blog
    each r in records
      .record
        img(src='#{r.url}' width=50 height=50 alt='#{r.alt}')
        .blog-description
          span.title.blog-title #{r.title}
          span.italic.blog-italic #{r.date}
mixin insta(pics)
  .footer-inst
    each p in pics
      img(src='#{p.url}' width=50 height=50 alt='#{p.alt}')
      
      
