mixin main-navigation(links)
  nav.main-navigation.clearfix
    ul
      each link in links
        li: a(href='#{link.url}') #{link.name}
    span.icon-basket basket
    span.icon-loupe loupe
mixin bottom-navigation(links2)
  nav.bottom-navigation
    ul
      each link2 in links2
        li: a(href='#{link2.url}') 
          span.num #{link2.no} 
          span.item #{link2.name}
mixin section-title(title1, title2)
  .main-title 
    span #{title1}
    h2 #{title2}
mixin serv-item(services)
  each service in services
    .services-item
      span.title #{service.item}
      p.item-descr.
        #{service.text}
mixin about(images)
  each i in images
    if i.no == '1'
      .main-img.marked-img
        .grad
        img.shadow-img(src='#{i.url}' width=380 height=250 alt='#{i.alt}')
    else
      .main-img
        img(src='#{i.url}' width=380 height=250 alt='#{i.alt}')
mixin stat-data(stats)
  each stat in stats
    .stat-item
      span.number #{stat.num}
      span.item #{stat.item}    
mixin radio-item(radbtns)   
  each title in radbtns
    .radio
      label.title #{title}
        if title == 'Photography'
          input(type='radio' name='radio-item' checked)
        else
          input(type='radio' name='radio-item')
    .radio-descr
      if block
        block
      else
      p.
